package gui;

import java.awt.Color;
import java.awt.Component;
import javax.swing.JTable;
import javax.swing.SwingUtilities;
import javax.swing.table.DefaultTableCellRenderer;

/**
 *
 * @author HP
 */
public class CellRenderer extends DefaultTableCellRenderer {

    Color fondoSeleccionado = new Color(128, 128, 128);
    Color frenteSeleccionado = new Color(255, 255, 255);

    Color fondo = Color.WHITE;
    Color frente = Color.BLACK;
    
    Integer [] alineaciones;
    
    

    public CellRenderer() {
        this.alineaciones = ModeloTabla.ALINEACIONES;
    }
    
    public CellRenderer(Integer[] alineaciones) {
        this.alineaciones = alineaciones;
    }

    @Override
    public Component getTableCellRendererComponent(JTable table, Object value,
            boolean selected, boolean focused, int row, int column) {

        if (selected) {
            this.setBackground(fondoSeleccionado);
            this.setForeground(frenteSeleccionado);
        } else {
            this.setBackground(fondo);
            this.setForeground(frente);
        }

        this.setHorizontalAlignment(alineaciones[column]);

        if (value instanceof Integer) {
            this.setText(value + "");
        } else if (value instanceof Double) {
            this.setText(value + "");
        } else {
            this.setText((String) value);
        }

        return this; //To change body of generated methods, choose Tools | Templates.
    }
    
    

}
